# Curl an endpoint and expect it to respond with status 200.
# Usage: health-check <address>

set -o errexit
set -o nounset
set -o pipefail

address=${1:-}
[ -z "${address}" ] && echo "No address supplied" && exit 1

status=$(curl -s -o /dev/null -w '%{http_code}' ${address})
if [[ "${status}" == '200' ]]; then
    exit 0
fi
if [[ "${status}" == '000' ]]; then
    exit 7
fi

exit 1
